                        <MenuItem fx:id="genMap3" mnemonicParsing="false" text="Layout 3" />
                        <MenuItem fx:id="genMap4" mnemonicParsing="false" text="Layout 4" />
                        <MenuItem fx:id="genMap5" mnemonicParsing="false" text="Layout 5" />
